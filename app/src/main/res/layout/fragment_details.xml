<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:id="@+id/constraint_layout"
    android:clickable="true"
    android:focusable="true">

    <!--<TextView
        android:id="@+id/textViewPsalmContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content of the psalm"

        app:layout_constraintStart_toStartOf="@+id/textViewPsalmNumberDetails"
        app:layout_constraintTop_toTopOf="parent" />-->

    <TextView
        android:id="@+id/textViewPsalm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Psalmul: "
        app:layout_constraintEnd_toStartOf="@id/textViewPsalmNumberDetails"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewPsalmNumberDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number 69"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewPsalm"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewPsalmContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPsalm" />

</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
