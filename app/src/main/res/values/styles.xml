<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->

    </style>

    <!-- Light theme -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="textColor">@color/light_text</item>
        <item name="buttonBackgroundColor">@color/primary_light</item>
        <item name="bgDescription">@drawable/heavens_gate</item>
        <item name="bgLogo">@drawable/psalmify_logo</item>
        <item name="cardGradient">@drawable/bg_gradient</item>
        <item name ="bgLogin">@drawable/login</item>
    </style>

    <!-- Dark theme -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="textColor">@color/dark_text</item>
        <item name="buttonBackgroundColor">@color/primary_dark</item>
        <item name="bgDescription">@drawable/night_gates</item>
        <item name="bgLogo">@drawable/dark_logo</item>
        <item name="cardGradient">@drawable/gradient_night</item>
        <item name ="bgLogin">@drawable/dark_login</item>
    </style>
</resources>
